<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".YantekActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:id="@+id/kordinat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Koordinat" />

        <Button
            android:id="@+id/getkordinat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Generate" />
    </LinearLayout>

    <EditText
        android:id="@+id/apkt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="APKT"
        android:maxLength="14"
        android:maxLines="1"
        android:textColorHint="@color/colorPrimary" />

    <EditText
        android:id="@+id/nometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nomor Meter / Idpel"
        android:inputType="number"
        android:maxLength="12"
        android:maxLines="1"
        android:textColorHint="@color/colorPrimary" />

    <EditText
        android:id="@+id/gangguan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Penyebab Gangguan"
        android:maxLength="14"
        android:maxLines="1"
        android:textColorHint="@color/colorPrimary" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tindakan"
        android:textColorHint="@color/colorPrimary"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/sp_tindakan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>

